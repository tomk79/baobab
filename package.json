{
  "name": "Baobab",
  "version": "0.1.0-alpha1",
  "description": "Baobab is the SystemFont Viewer Application.",
  "main": "index.html",
  "scripts": {
    "start" : "node_modules/nodewebkit/bin/nodewebkit",
    "build" : "node ./build.js"
  },
  "author": "Tomoya Koyanagi",
  "license": "BSD",
  "dependencies": {
    "nodewebkit": "0.11.*",
    "node-webkit-builder": "1.0.*",
    "zip-folder": "^1.0.0",
    "express":"^4.13.0",
    "socket.io": "^1.3.5",
    "glob": "^5.0.10",
    "mkdirp": "0.*",
    "phpjs": "^1.3.2"
  },
  "window":{
    "title": "Baobab",
    "toolbar":true,
    "frame":true,
    "width":1024,
    "height":520,
    "fullscreen":false,
    "icon": "src/common/build/icon.png",
    "position": "mouse"
  },
  "platformOverrides": {
    "win": {
      "window": {
        "toolbar": false
      }
    },
    "osx": {
      "window": {
        "toolbar": false
      }
    }
  }
}
